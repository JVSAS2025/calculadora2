    .item { display: flex; justify-content: space-between; margin: 10px 0; }
    .container-3d {
      margin-top: 30px; width: 300px; height: 200px;
      border: 2px solid #aaa; perspective: 800px;
      margin-bottom: 20px; margin-left: auto; margin-right: auto;
    }
    .box {
      width: 100%; height: 100%;
      background: linear-gradient(135deg, #90caf9, #e3f2fd);
      transform: rotateX(10deg) rotateY(15deg);
      display: flex; align-items: center; justify-content: center;
      font-size: 24px; font-weight: bold;
    }
    #recommendation { font-size: 18px; font-weight: bold; text-align: center; }
  </style>
